@EndUserText.label: 'Sales Order Item (Global)'
@AbapCatalog.tableCategory: #TRANSPARENT
@AbapCatalog.deliveryClass: #A
@AbapCatalog.dataMaintenance: #ALLOWED
define table z_salesitem {
  key client        : abap.clnt not null;
  key so_id         : abap.char(14) not null;
  key item_no       : abap.numc(6) not null;
  product_id        : abap.char(12);
  quantity          : abap.quan(13,3);
  unit_price        : abap.curr(15,2);
  net_amount        : abap.curr(15,2);
}
